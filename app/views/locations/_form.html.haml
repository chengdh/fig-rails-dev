= semantic_form_for resource,html: {id: "location_form"} do |f|
  = f.inputs do
    = f.input :warehouse_id,as: :select,collection: current_ability_warehouse_for_select,include_blank: false,input_html: {class: "input-sm",style: "width : 30%;"}
    = f.input :name,input_html: {style: "width : 30%;"}
    = f.input :location_type,as: :select,collection: location_types_for_select,include_blank: false,input_html: {class: "input-sm",style: "width : 30%;"}
    = f.input :x,input_html: {style: "width : 30%;"}
    = f.input :y,input_html: {style: "width : 30%;"}
    = f.input :z,input_html: {style: "width : 40%;"}
    = f.input :order_by,input_html: {style: "width : 30%;"}
    = f.input :is_active,label: false,input_html: {style: "width : 20%;"}
    = f.input :note,input_html: {rows: 2,style: "width : 40%;"}
