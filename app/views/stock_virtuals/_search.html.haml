.well.well-sm
  = search_form_for @q,html: {class: "form-inline"} do |f|
    = f.hidden_field :qty_gt,value: 0
    = f.select :location_id_eq,options_for_select(current_ability_locations_for_select),{prompt: "--选择库位--"},:class => "input-sm form-control"
    = f.select :equipment_equipment_category_id_eq,options_for_select(equipment_categories_for_select),{prompt: "--设备类别--",include_blank: true},:class => "input-sm form-control"
    = f.text_field :equipment_name_cont,:class => "input-sm form-control",placeholder: "设备名称"
    = f.text_field :brand_cont,:class => "input-sm form-control",placeholder: "品牌"
    = f.text_field :model_cont,:class => "input-sm form-control",placeholder: "型号"
    = f.submit "查询",class: "btn btn-primary btn-sm"
