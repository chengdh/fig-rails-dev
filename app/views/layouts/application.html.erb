<!DOCTYPE html>
<html>
  <head>
    <title>SSO系统</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',debug: true %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body data-no-turbolink>
    <div class="header">
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <!-- Logo -->
            <div class="logo">
              <h1><a href="#">SSO系统</a></h1>
            </div>
          </div>
          <!--
          <div class="col-md-5">
            <div class="row">
              <div class="col-lg-12">
                <div class="input-group form">
                  <input type="text" class="form-control" placeholder="Search...">
                  <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">Search</button>
                  </span>
                </div>
              </div>
            </div>
          </div>
          -->
          <div class="col-md-2 col-md-offset-5">
            <div class="navbar navbar-inverse" role="banner">
              <%if user_signed_in?%>
              <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                <ul class="nav navbar-nav">
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">账户信息 <b class="caret"></b></a>
                    <ul class="dropdown-menu animated fadeInUp">
                      <li><%= link_to current_user.email, "#" %></li>
                      <li><%= link_to "退出登录", destroy_user_session_path,method: :delete %></li>
                    </ul>
                  </li>
                </ul>
              </nav>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="page-content">
      <div class="row">
        <div class="col-md-2">
          <div class="sidebar content-box" style="display: block;">
            <% if current_user.is_admin %>
            <ul class="nav">
              <!-- Main menu -->
              <li class="current">
                <a href="<%= users_path%>">
                  <i class="glyphicon glyphicon-home"></i>
                  用户管理
                </a>
              </li>
              <li>
                <a href="<%= web_apps_path %>">
                  <i class="glyphicon glyphicon-pencil"></i>
                  应用系统管理
                </a>
              </li>
            </ul>
            <% else %>
              <ul class="nav">
                <li>
                  <p>
                    欢迎使用SSO应用系统,点击相关链接进入对应系统
                  </p>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
        <div class="col-md-10">
          <div class="row">
            <%if flash[:notice].present?%>
              <div class="alert alert-info" role="alert"><%= flash[:notice]%></div>
            <%end%>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <div class="container">
        <div class="copy text-center">
          Copyright 2015 <a href='#'>中电投</a>
        </div>
      </div>
    </footer>
  </body>
  <%= javascript_include_tag 'application',debug:  true %>
</html>
