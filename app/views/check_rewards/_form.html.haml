= semantic_form_for resource,url: {action: :update},html: {id: "check_reward_form"} do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.hidden_field :checker_id,value: current_user.id
  = f.hidden_field :check_date,value: Date.today

  .table-responsive
    %table.table.table-condensed.table-bordered
      %tr
        %th 审核结果
        %td
          = f.input :check_state,as: :select,collection: check_states_for_select,include_blank: false,label: false,input_html: {class: "input-sm"}
        %th 加分情况
        %td
          = f.input :marks,label: false,input_html: {class: "input-sm"}
      %tr
        %th 审核意见
        %td{:colspan => 3}= f.input :check_opinion,label: false,input_html: {cols: 3,rows: 2}
