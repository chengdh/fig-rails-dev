= semantic_form_for resource,html: {id: "task_form"} do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.hidden_field :user_id,value: current_user.id

  = f.input :org_id,as: :select,collection: current_ability_orgs_for_select,include_blank: false,input_html: {style: "width : 30%;"}

  = f.input :task_category_id,as: :select,collection: task_categories_for_select,include_blank: false,input_html: {style: "width : 30%;"}
  = f.input :task_date,as: :string,input_html: {class: "input-sm",readonly: true,"data-provide" => "datepicker",
          "data-date-format" => "yyyy-mm-dd","data-date-language" => "zh-CN",style: "width : 30%;"}

  = f.input :name,input_html: {class: "input-sm",style: "width : 80%"}
  = f.input :note,input_html: {class: "input-sm",cols: 3,rows: 2}

  = f.input :executer_id,as: :select,collection: users_for_select,include_blank: false,input_html: {style: "width : 30%;"}
