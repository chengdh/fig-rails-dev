= semantic_form_for resource,url: {action: :update},html: {id: "check_assessment_form"} do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.hidden_field :checker_id,value: current_user.id
  = f.hidden_field :check_date,value: Date.today
  %table.table.table-condensed.table-bordered
    %tr
      %th 审核结果
      %td
        = f.input :check_state,as: :select,collection: check_states_for_select,include_blank: false,label: false,input_html: {class: "input-sm"}
      %td{:colspan => 2}
        = f.input :check_opinion,label: false,input_html: {cols: 3,rows: 2,placeholder: "审核意见"}
    %tr
      %td= f.input :k_big_hidden_danger_marks,input_html: {style: "width: 60px;"}
      %td= f.input :k_big_accident_marks,input_html: {style: "width: 60px;"}
      %td= f.input :k_punishment_marks,input_html: {style: "width: 60px;"}
      %td= f.input :reward_marks,input_html: {style: "width: 60px;"}
