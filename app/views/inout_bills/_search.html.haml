.box.box-default.box-solid.box-info
  .box-header
    %h4.box-title 查询
  .box-body
    = semantic_search_form_for @q,url: collection_path,html: {id: "search_training_form",method: :get,style: "width : 400px;" } do |f|
      / = f.input :org_id_eq,as: :select,collection: current_ability_orgs_for_select,label: "所属机构",input_html: {class: "input-sm"}
      = render "shared/org_select_in_search_form",f: f
      = f.input :bill_no_cont,label: "单据号",input_html: {class: "input-sm"}
      = f.input :bill_date_gteq,as: :string,label: "单据日期",input_html: {readonly: true,
         "data-provide" => "datepicker",
         "data-date-format" => "yyyy-mm-dd",
         "data-date-end-date" => "0d",
         "data-date-language" => "zh-CN",
         :value => Date.today}

      = f.input :bill_date_lteq,as: :string,label: "~",input_html: {readonly: true,
         "data-provide" => "datepicker",
         "data-date-format" => "yyyy-mm-dd",
         "data-date-end-date" => "0d",
         "data-date-language" => "zh-CN",
         :value => Date.today}

      = f.input :state_eq,as: :select,collection: inout_bill_states_for_select,label: "状态",input_html: {class: "input-sm"}
      = f.actions do
        = f.action :submit,label: "查询", :button_html => { :class => "btn btn-sm btn-primary", data: {:disable_with => '稍等...'}}
