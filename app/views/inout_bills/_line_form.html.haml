%table.table.table-condensed.table-bordered.table-stripped.table-hover
  %thead
    %tr
      %th{style: "text-align : center;"} 设备名称
      %th{style: "text-align : center;"} 类别
      %th{style: "text-align : center;"} 单位
      %th{style: "text-align : center;"} 厂家
      %th{style: "text-align : center;"} 规格型号
      %th{style: "text-align : center;"} 单价
      %th{style: "text-align : center;"} 数量
      %th{style: "text-align : center;"} 金额
      %th{style: "text-align : center;"} 操作
    %tbody
      = f.semantic_fields_for :inout_lines do |f_line|
        %tr{class: "tr-inout-line"}
          %td
            = f_line.object.equipment.name
            = f_line.input :equipment_id,as: :hidden

          %td= f_line.object.equipment.try(:equipment_category_name).try(:name)
          %td{style: "text-align : center;"}= f_line.object.equipment.try(:unit).try(:name)
          %td= f_line.object.equipment.try(:factory_name)
          %td= f_line.object.equipment.model
          %td
            = f_line.input :price,label: false,input_html: {class: "input-sm",style: "width: 20%;"}
          %td
            = f_line.input :qty,label: false,input_html: {class: "input-sm",style: "width: 50px;"}
          %td{style: "text-align : center;"}
            %span{:class => "amt"}
          %td{style: "text-align : center;"}
            = f_line.hidden_field :_destroy,class: "destroy"
            %a{href: "#",class: "btn-delete-inout-line",style: "color: red;"}
              %i.fa.fa-close

    %tbody#inout_line_temp_wrapper
