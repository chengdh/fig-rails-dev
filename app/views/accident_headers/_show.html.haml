%table#accident_header_table.table.table-condensed.table-striped.table-hover.table-bordered
  %thead
    %tr
      %td{colspan: 8,style: "text-align: right;"}
        %span{class: resource.check_state_class}
          = resource.check_state_des


    -# %tr
    -#   %th{:colspan => 12}
    -#     %h3 南阳市烟草专卖局(公司)事故月报
    %tr
      %th 填报单位:
      %th= resource.org.name
      %th 填报年月:
      %th= resource.mth
      %th 填报时间:
      %th= resource.table_date
      -# %th
      -# %th
      -# %th
      -# %th
    -# %tr
    -#   %th{:rowspan => 2}
    -#   %th{:colspan => 5} 工业
    -#   %th{:colspan => 5} 商业
    %tr
      -# %th 事故次数
      -# %th 死亡(人)
      -# %th 受重伤(人)
      -# %th 直接经济损失(万元)
      -# %th 备注

      %th{style: "text-align: center;background: #3C8DBC;width: 150px;"}
      %th{style: "text-align: center;background: #3C8DBC;"} 事故次数
      %th{style: "text-align: center;background: #3C8DBC;"} 死亡(人)
      %th{style: "text-align: center;background: #3C8DBC;"} 受重伤(人)
      %th{style: "text-align: center;background: #3C8DBC;"} 直接经济损失(万元)
      %th{style: "text-align: center;background: #3C8DBC;"} 备注
  %tbody
    %tr{style: "color: red;"}
      %th 本月合计
      %th= resource.accidents.sum(:commerical_accident_count)
      %th= resource.accidents.sum(:commerical_die_persons)
      %th= resource.accidents.sum(:commerical_wounded_persons)
      %th= resource.accidents.sum(:commerical_economic_losses)
      %th

    - resource.accidents.each do |accident|
      %tr
        %th
          = accident.accident_type.name
        -# %td
        -#   = accident.industry_accident_count == 0 ? "" : accident.industry_accident_count
        -# %td
        -#   = accident.industry_die_persons == 0 ? "" : accident.industry_die_persons 
        -# %td
        -#   = accident.industry_wounded_persons == 0 ? "" : accident.industry_wounded_persons 
        -# %td
        -#   = accident.industry_economic_losses == 0 ? "" : accident.industry_economic_losses 
        -# %td
        -#   = accident.industry_note
        %td
          = accident.commerical_accident_count == 0 ? "" : accident.commerical_accident_count
        %td
          = accident.commerical_die_persons == 0 ? "" : accident.commerical_die_persons 
        %td
          = accident.commerical_wounded_persons == 0 ? "" : accident.commerical_wounded_persons 
        %td
          = accident.commerical_economic_losses == 0 ? "" : accident.commerical_economic_losses
        %td
          = accident.commerical_note
    %tr
      %th{style: "text-align: left;"}
        %p 事故简情况:
        %p (伤亡人数，直接经济损失，事故责任者、原因经过)
      %td{:colspan => 10}= resource.note
