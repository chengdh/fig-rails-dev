= semantic_form_for resource,html: {id: "driver_form"} do |f|
  = f.inputs do
    / = f.input :org_id,as: :select,collection: current_ability_orgs_for_select,include_blank: false,input_html: {style: "width : 30%;"}
    = render "shared/org_select_in_form",f: f
    = f.input :name,input_html: {style: "width : 30%;"}
    = f.input :vehicle_id,as: :select,collection: current_ability_vehicles_for_select,include_blank: false,input_html: {style: "width : 30%;"}
    = f.input :driver_no,input_html: {style: "width : 60%;"}
    = f.input :id_no,input_html: {style: "width : 60%;"}
    = f.input :mobile,input_html: {style: "width : 30%;"}


    = f.input :next_check_date,as: :string,input_html: {readonly: true,
      "data-provide" => "datepicker",
      "data-date-format" => "yyyy-mm-dd",
      "data-date-language" => "zh-CN",
      style: "width : 20%;"}

    = f.input :is_active,label: false
