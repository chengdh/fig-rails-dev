= semantic_form_for resource,url: {action: :check},html: {id: "check_vpn_info_form"} do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.hidden_field :checker_id,value: current_user.id

  .table-responsive
    %table.table.table-condensed.table-bordered
      %tr
        %th{style: "vertial-align: middle;"} 审核结果
        %td{style: "vertial-align: middle;"}= f.input :check_state,as: :select,collection: check_states_for_select,include_blank: false,label: false,input_html: {class: "input-sm"}
        %th{style: "vertial-align: middle;"}  审核意见
        %td{style: "vertial-align: middle;",colspan: 3}= f.input :check_opinion,label: false,input_html: {cols: 3,rows: 2}
