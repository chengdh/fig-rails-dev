%table#hidden_danger_table.table.table-condensed.table-bordered
  %tr
    %th 下发部门
    %td= resource.org
    %th 接收部门
    %td= resource.danger_org
    %th 录入时间
    %td= resource.table_date
  %tr
    %th 隐患名称
    %td{:colspan => 6}= resource.name
  %tr
    %th 发现隐患时间
    %td= resource.danger_date
    %th 整改期限
    %td= resource.fix_period_des
  %tr
    %th 下发时间
    %td= resource.try(:deliver_date)
    %th 下发人
    %td= resource.try(:deliver).try(:real_name)
    %td
    %td

  %tr
    %th 整改上报时间
    %td= resource.try(:fix_date)
    %th 上报人
    %td= resource.try(:fixer).try(:real_name)
    %td 整改状态
    %td= resource.try(:fixed_state_des)

  %tr
    %th 复查时间
    %td= resource.try(:fix_date)
    %th 复查人
    %td= resource.try(:reviewer).try(:real_name)
    %td 复查状态
    %td= resource.try(:review_state_des)
