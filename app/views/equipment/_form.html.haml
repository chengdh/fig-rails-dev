= semantic_form_for resource,html: {id: "equipment_form"} do |f|
  = f.inputs do
    = f.input :equipment_category_id,as: :select,collection: equipment_categories_for_select,input_html: {style: "width : 30%;"}
    = f.input :name,input_html: {style: "width : 30%;"}
    = f.input :photo,as: :file
    = f.input :unit_id,as: :select,collection: units_for_select,include_blank: false,input_html: {style: "width : 30%;"}

    = f.input :purchase_date,as: :string,input_html: {readonly: true,
      "data-provide" => "datepicker",
      "data-date-format" => "yyyy-mm-dd",
      "data-date-language" => "zh-CN",
      style: "width : 15%;"}
    = f.input :purchase_price,input_html: {style: "width : 60%;"}
    = f.input :guarantee_days,input_html: {style: "width : 60%;"}

    = f.input :factory_name

    = f.input :model

    = f.input :order_by,input_html: {style: "width : 20%;"}

    = f.input :is_active,label: false
