.table-responsive
  %table.table.table-condensed.table-striped.table-hover.table-bordered
    %tr
      %td{:colspan => 3}
        No:
        = @po_header.segment1

      %td{:style => "text-align: right;"}
        %span.label.label-info 审批中
    %tr
      %td{:colspan => 4}
        %h4{:style => "text-align: center;"}
          = @po_header.vendor_name
    
    %tr
      %th 采购员:
      %td{:colspan => 3}
        = @po_header.agent_name

    %tr
      %th 付款方式:
      %td{:colspan => 3}
        = @po_header.payment_terms
    %tr
      %th 供应商地点:
      %td{:colspan => 3}
        = @po_header.vendor_site_code

    %tr
      %th 摘要:
      %td.vert-align_td{:colspan => 3}
        = @po_header.comments
