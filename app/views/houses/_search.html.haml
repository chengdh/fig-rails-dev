.box.box-default.box-solid.box-info
  .box-header
    %h4.box-title 查询
  .box-body
    = semantic_search_form_for resource_class.ransack,html: {id: "search_salary_table_form",method: :get,style: "width : 400px;" } do |f|
      = render "shared/org_select_in_search_form",f: f
      = f.input :name_cont,label: "名称",input_html: {class: "input-sm"}
      = f.input :location_cont,label: "位置",input_html: {class: "input-sm"}
      = f.input :build_date_gteq,as: :string,label: "建造时间",input_html: {readonly: true,
         "data-provide" => "datepicker",
         "data-date-format" => "yyyy-mm-dd",
         "data-date-end-date" => "0d",
         "data-date-language" => "zh-CN",
         :value => Date.today}

      = f.input :build_date_lteq,as: :string,label: "~",input_html: {readonly: true,
         "data-provide" => "datepicker",
         "data-date-format" => "yyyy-mm-dd",
         "data-date-end-date" => "0d",
         "data-date-language" => "zh-CN",
         :value => Date.today}


      = f.input :is_rent_eq,as: :boolean,label: false
      = f.input :is_active_eq,as: :boolean,label: false
      = f.actions do
        = f.action :submit,label: "查询", :button_html => { :class => "btn btn-sm btn-primary", data: {:disable_with => '稍等...'}}
