%script#equipment_list_temp{:type => "text/html"}
  %tr
    %td
      %input{:type => "checkbox",:class=> "cbx-select-equipment","data-value" => "id"}
    %td
      %span{class:"name","data-content" => "name"}
    %td
      %span{class: "equipment_category_name","data-content" => "equipment_category_name"}
    %td
      %span{class: "unit_name","data-content" => "unit_name"}
    %td
      %span{class: "factory_name","data-content" => "factory_name"}
    %td
      %span{class: "model","data-content" => "model"}
    %td
