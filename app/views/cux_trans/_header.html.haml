.table-responsive
  %table.table.table-condensed.table-striped.table-hover.table-bordered
    %tr
      %td{:colspan => 4}
        %h4{:style => "text-align: center;"}
          = @cux_tran.require_number
          %span.label.label-info
            = @cux_tran.require_status
    %tr
      %th 申请部门:
      %td
        = @cux_tran.require_deparment
      %th 申请人:
      %td
        = @cux_tran.require_person
    %tr
      %th 领用部门:
      %td
        = @cux_tran.trans_deparment
      %th
      %td
    %tr
      %th 申请日期:
      %td
        = @cux_tran.require_date.strftime("%Y-%m-%d")

      %th 来源:
      %td
        = @cux_tran.categorie
    %tr
      %th 项目类型:
      %td{:colspan => 3}
        = @cux_tran.project_type
    %tr
      %th 项目编号:
      %td{:colspan => 3}
        = @cux_tran.segment1
    %tr
      %th 备注:
      %td{:colspan => 3}
        = @cux_tran.remark
    %tr
      %td{:colspan => 4,:style => "text-align: center;"} 预算 
    %tr
      %th 项目总额:
      %td
        = @cux_tran.bugdet_balance

      %th 可用预算:
      %td
        = @cux_tran.bugdet_total

    %tr
      %th 本次领用:
      %td
        = @cux_tran.header_bugdet
      %th
      %td
