.box.box-default.box-solid.box-info
  .box-header
    %h4.box-title 查询
  .box-body
    = semantic_search_form_for IpInfoLine.ransack,url: {action: :search_lines},html: {id: "search_ip_info_header_line_form",method: :get,style: "width : 400px;" } do |f|
      = f.input :ip_info_header_org_id_eq,as: :select,collection: current_ability_orgs_for_select,label: "所属机构",input_html: {class: "input-sm"}
      = f.input :org_id_eq,as: :select,collection: current_children_orgs_for_select,label: "科室",input_html: {class: "input-sm"}
      = f.input :post_eq,label: "职位",input_html: {class: "input-sm"}
      = f.input :employee_name_cont,label: "姓名",input_html: {class: "input-sm"}
      = f.input :ip_eq,label: "IP地址",input_html: {class: "input-sm"}
      = f.input :mac_eq,label: "MAC地址",input_html: {class: "input-sm"}
      = f.input :net_type_eq,as: :select,collection: net_types_for_select,label: "外网业务",input_html: {class: "input-sm"}
      = f.actions do
        = f.action :submit,label: "查询", :button_html => { :class => "btn btn-sm btn-primary", data: {disable_with: '稍等...'}}


