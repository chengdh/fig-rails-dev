<!-- Content Header (Page header) -->
%section.content-header
  %h3 ip地址查询结果

<!-- Main content -->
%section.content
  .row
    .col-md-12.col-sm-12.col-xs-12
      .box.box-info
        .box-header
          %h3.box-title
            = render "dynamic_toolbar"

        .box-body{style: "overflow-x : scroll;"}
          .table-responsive
            %table.table.table-condensed.table-bordered.table-striped.table-hover
              %tr
                %th{style: "text-align: center;"} 序号
                %th{style: "text-align: center;"} 科室名称
                %th{style: "text-align: center;"} 岗位职务
                %th{style: "text-align: center;"} 责任人
                %th{style: "text-align: center;"} ip地址
                %th{style: "text-align: center;"} MAC
                %th{style: "text-align: center;"} 外网业务
                -# %th{style: "text-align: center;"} 审核状态
                %th{style: "text-align: center;"} 备注
              - @ip_info_lines.each_with_index do |line,idx|
                %tr
                  %td{style: "text-align: center;"}= idx+1
                  %td{style: "text-align: center;"}= line.org
                  %td= line.post
                  %td{style: "text-align: center;"}= line.employee_name
                  %td{style: "text-align: center;"}= line.ip
                  %td{style: "text-align: center;"}= line.mac
                  %td{style: "text-align: center;"}= net_type_des(line.net_type)
                  -# %td{style: "text-align: center;"}
                    %label{class: line.state_class}= line.state_des
                  %td= line.note


          = will_paginate @ip_info_lines, renderer: BootstrapPagination::Rails,previous_label: t("previous"), next_label: t("next") %>
