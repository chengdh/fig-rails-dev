= semantic_form_for resource,html: {id: "transformer_form"} do |f|
  = f.inputs do
    = f.input :org_id,as: :select,collection: current_ability_orgs_for_select,include_blank: false,input_html: {style: "width : 30%;"}
    = f.input :qty,input_html: {style: "width : 30%;"}
    = f.input :buy_date,as: :string,input_html: {readonly: true,
      "data-provide" => "datepicker",
      "data-date-format" => "yyyy-mm-dd",
      "data-date-language" => "zh-CN",
      style: "width : 20%;"}

    = f.input :work_type,as: :select,collection: work_types_for_select,include_blank: false,input_html: {style: "width : 30%;"}
    = f.input :power,input_html: {style: "width : 30%;"}
    = f.input :last_check_date,as: :string,input_html: {readonly: true,
      "data-provide" => "datepicker",
      "data-date-format" => "yyyy-mm-dd",
      "data-date-language" => "zh-CN",
      style: "width : 20%;"}


    = f.input :note,input_html: {cols: 3,rows: 4}
    = f.input :is_active,label: false
