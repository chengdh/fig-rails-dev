.box.box-default.box-solid.box-info
  .box-header
    %h4.box-title 查询
  .box-body
    = semantic_search_form_for resource_class.ransack,html: {id: "search_employee_form",method: :get,style: "width : 400px;height: 100%;" } do |f|
      = render "shared/org_select_in_search_form",f: f
      = f.input :name_cont,label: "姓名",input_html: {class: "input-sm"}
      = f.input :id_no_cont,label: "身份证号",input_html: {class: "input-sm"}
      = f.input :mobile_cont,label: "手机",input_html: {class: "input-sm"}
      = f.actions do
        = f.action :submit,label: "查询", :button_html => { :class => "btn btn-sm btn-primary", data: {disable_with: '稍等...'}}


