<!-- Content Header (Page header) -->
%section.content-header
  %h3 新建

<!-- Main content -->
%section.content
  .row
    .col-md-12.col-sm-12.col-xs-12
      .box.box-info
        .box-header
          %h3.box-title
            = render "dynamic_toolbar"

        .box-body
          %div
            = form_tag accidents_path,method: :post do
              %table.table.table-condensed
                %thead
                %tbody
                  - @accidents.each do |a|
                    = fields_for "accidents[]",a do |f|
                      %tr
                        %td
                          = a.accident_type.name
                          = f.hidden_field :accident_type_id
