= semantic_form_for @fee_info do |f|
  = f.inputs do
    = f.input :user_id,as: :hidden,input_html: {value: current_user.id}
    = f.input :fee_date,label: "费用日期",as: :string,input_html: {class: "datepicker",readonly: true,size: 12,value: Date.today}
    = f.input :cr,label: "收入"
    = f.input :dr,label: "支出"
    = f.input :note,label: "备注"

  = f.actions do
    = f.submit "保存数据",:class => "btn btn-primary"
    &nbsp;&nbsp;
    = link_to "返回",:back
