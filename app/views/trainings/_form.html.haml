= semantic_form_for resource,html: {id: "training_form"} do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.hidden_field :user_id,value: current_user.id
  %table#training_form_table.table.table-condensed.table-bordered
    %tr
      %th 上报机构
      %td{:colspan => 3}= f.select :org_id,current_ability_orgs_for_select,{include_blank: false},:class => "form-control"
      %th 上报时间
      %td= f.input :table_date,label: false,input_html: {readonly: true,class: "input-sm"}
 
    %tr
      %th 培训名称
      %td{:colspan => 5}= f.input :name,label: false,input_html: {class: "input-sm",style: "width : 80%"}
    %tr
      %th 讲师
      %td= f.input :teachers,label: false,input_html: {class: "input-sm"}
      %th 时间
      %td
        = f.input :training_date,as: :string,label: false,input_html: {class: "input-sm",readonly: true,"data-provide" => "datepicker",
          "data-date-format" => "yyyy-mm-dd","data-date-language" => "zh-CN"}
      %th 培训时长
      %td= f.input :training_length,label: false,input_html: {class: "input-sm"}

    %tr
      %th 参加人员
      %td{:colspan => 3}= f.input :join_persons,label: false,input_html: {class: "input-sm"}

      %th 人数
      %td= f.input :join_count,label: false,input_html: {class: "input-sm"}
    %tr
      %th{:colspan => 6} 培训内容
    %tr
      %td{:colspan => 6}
        = f.input :training_content,label: false,input_html: {cols: 12,rows: 4}
    %tr
      %th{:colspan => 6} 培训照片
    %tr
      %td= f.input :photo_1,as: :file,label: false
      %td= f.input :photo_1,as: :file,label: false
      %td= f.input :photo_1,as: :file,label: false
      %td= f.input :photo_1,as: :file,label: false
      %td= f.input :photo_1,as: :file,label: false
      %td= f.input :photo_1,as: :file,label: false
    %tr
      %th 有无考核
      %td
        = f.input :is_assess,label: false
      %th 考核方式
      %td
        = f.input :assess_type,as: :select,collection: assess_types_for_select,include_blank: false,label: false,input_html: {class: "input-sm"}
      %th 合格率
      %td
        = f.input :qualified_rate,label: false,input_html: {class: "input-sm"}
