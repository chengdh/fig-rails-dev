<!-- Content Header (Page header) -->
%section.content-header
  %h3=  "修改#{resource_name}"

<!-- Main content -->
%section.content
  <!-- Info boxes -->
  .row
    .col-md-12.col-sm-12.col-xs-12
      .box.box-primary
        .box-header
          %h3.box-title
            = render "dynamic_toolbar"

        .box-body{style: "overflow-y : scroll;"}
          %div{:id => "#{resource_class.name.underscore}_form_before_wrap"}
            = render 'form_before'
            = yield :form_before

          %div{:id => "#{resource_class.name.underscore}_form_wrap"}
            = render 'form'
            = yield :form
          %div{:id => "#{resource_class.name.underscore}_form_after_wrap"}
            = render 'form_after'
            = yield :form_after
