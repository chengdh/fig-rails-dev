.header
  .container
    .row
      .col-md-12
        <!-- Logo -->
        .logo
          %h1 
            %a{:href => "#"} 
              企业资料申报系统

.page-content.container
  .row
    .col-md-4.col-md-offset-4
      .login-wrapper
        .box
          %h2 登&nbsp;&nbsp;录
          .content-wrap
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-inputs
                = f.text_field :email,  autofocus: true,class: "form-control",placeholder: "请输入您的EMail"
                = f.password_field :password, required: false,class: "form-control",placeholder: "请输入密码"
                = f.input :remember_me,label: "保存登录信息", as: :boolean if devise_mapping.rememberable?
              .actions
                = f.submit "登录",:class => "btn btn-primary signup"

          .actions
            = render "devise/shared/links"
