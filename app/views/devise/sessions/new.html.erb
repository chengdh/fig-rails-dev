<div class="container">
  <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <div class="row">
      <div class="iconmelon">
        <%= image_tag "logo.png",size: "150x120" %>
      </div>
    </div>
    <%= devise_error_messages! %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title text-center">
          <h3>欢迎使用</h3>
          <h4>综合信息管理平台</h4>
        </div>
      </div>

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),name: "form-login", id:"form-login", class: "form-horizontal" ) do |f| %>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <%= f.text_field :login, autofocus: true,class: "form-control", placeholder: "用户名" %>
          </div>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <%= f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "密码" %>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>
              保存登录信息
            </label>
          </div>

          <div class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
              <button type="submit" id="btn-login" class="btn btn-primary">
                <i class="glyphicon glyphicon-log-in"></i>
                登录平台
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="particles"></div>
