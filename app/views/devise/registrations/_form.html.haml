= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.input :username, required: true, autofocus: true,placeholder: "example@a.com",label: "用户名"
      = f.input :password,label: "密码",hint: "最少#{@minimum_password_length} 个字符" if @validatable
      = f.input :password_confirmation,label: "验证密码"

      = f.actions do
        = f.submit "保存用户信息",:class => "btn btn-primary signup"
