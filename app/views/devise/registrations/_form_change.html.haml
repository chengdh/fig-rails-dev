= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.input :current_password,label: "当前密码",hint: "请输入当前密码"
  = f.input :password,label: "新密码",autocomplete: "off",hint: "若不修改,请留空"
  = f.input :password_confirmation,label: "验证密码",required: false
  = f.input :company_name,label: "公司名称"
  = f.input :address,label: "公司地址"
  = f.input :touch_man,label: "联系人"
  = f.input :phone,label: "联系电话"
  = f.actions do
    = f.submit "更新注册信息",:class => "btn btn-primary"
