%table.table.table-hover.table-condensed.table-striped{:style => "font-size : 10px;","data-leagues" => Match.last_week_leagues.to_json}
  %tr
    %td
      %a.btn.btn-sm.btn-default.btn-last-week-yesterday{:href =>"#",:role =>"button","data-day" => @yesterday}
        %span.glyphicon.glyphicon-arrow-left
    %td
      = select_tag "select_last_week_match_time_eq",options_for_select(last_week_for_select,@current_day),
        :class => "input-sm form-control select-week-of_day"

    %td{:style => "text-align : right;"}
      %a.btn.btn-sm.btn-default.btn-last-week-tomorrow{:href =>"#",:role =>"button","data-day" => @tomorrow }
        %span.glyphicon.glyphicon-arrow-right

%table.table.table-hover.table-condensed.table-striped
  %tbody
    - @matches.each do |match|
      %tr.match-tr{"data-match" => match.to_json}
        %td
          = match.try(:league).try(:cn_name)
          %p= match.match_time.strftime("%H:%M")
        %td{:style => "vertical-align : middle;"}
          - if match.try(:current_match).try(:home_yellow_card).present?
            %span.label.label-warning= match.try(:current_match).try(:home_yellow_card)
          - if match.try(:current_match).try(:home_red_card).present?
            %span.label.label-danger= match.try(:current_match).try(:home_red_card)
          = match.team1.cn_name

        %td
          = "#{match.home_score}:#{match.guest_score}"
          %p= "(#{match.half_home_score}:#{match.half_guest_score})"
        %td{:style => "vertical-align : middle;"}
          = match.team2.cn_name
          - if match.try(:current_match).try(:guest_red_card).present?
            %span.label.label-danger= match.try(:current_match).try(:guest_red_card)
          - if match.try(:current_match).try(:gues_yellow_card).present?
            %span.label.label-warning= match.try(:current_match).try(:guest_yellow_card)
