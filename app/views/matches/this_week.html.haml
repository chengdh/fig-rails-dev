%table.table.table-hover.table-condensed.table-striped{:style => "font-size : 10px;","data-leagues" => Match.this_week_leagues.to_json}
  %tr
    %td
      %a.btn.btn-sm.btn-default.btn-this-week-yesterday{:href =>"#",:role =>"button","data-day" => @yesterday}
        %span.glyphicon.glyphicon-arrow-left
    %td
      = select_tag "select_this_week_match_time_eq",options_for_select(this_week_for_select,@current_day),
        :class => "form-control input-sm select-week-of-day"

    %td{:style => "text-align : right;"}
      %a.btn.btn-sm.btn-default.btn-this-week-tomorrow{:href =>"#",:role =>"button","data-day" => @tomorrow }
        %span.glyphicon.glyphicon-arrow-right

%table.table.table-hover.table-condensed.table-striped
  %tbody
    - @matches.each do |match|
      %tr.match-tr{"data-match" => match.to_json}
        %td{:style => "vertical-align : middle;width : 20%;"}
          = match.try(:league).try(:cn_name)
          %p{:style => "margin : 0;"}
            = match.match_time.strftime("%H:%M")
        %td{:style => "vertical-align : middle;width : 30%;"}
          = match.team1.cn_name

        %td{:style => "vertical-align : middle;"}
          %span.label.label-danger vs

        %td{:style => "vertical-align : middle;"}
          = match.team2.cn_name
