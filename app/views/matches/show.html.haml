%table.table.table-condensed
  %thead
    %tr
      %th{:style => "text-align : center;"}
        = @match.team1.cn_name
      %th{:style => "text-align : center;"}
        %h4 VS
        %p= @match.match_time.strftime("%Y-%m-%d %H:%M")
        %p= @match.status
      %th{:style => "text-align : center;"}
        = @match.team2.cn_name

%ul.nav.nav-tabs
  %li.active{:role => "presentation"}
    = link_to "事件", "#"
  %li{:role => "presentation"}
    = link_to "阵容", "#"
  %li{:role => "presentation"}
    = link_to "分析", "#"
  %li{:role => "presentation"}
    = link_to "亚赔", "#"
  %li{:role => "presentation"}
    = link_to "欧赔", "#"
  %li{:role => "presentation"}
    = link_to "大小", "#"

/ 阵容

= render "lineups"

/ 联赛积分排名
%h5 联赛积分排名
= render "league_rankings",league_rankings: @match.home_league_rankings,team: @match.team1
= render "league_rankings",league_rankings: @match.guest_league_rankings,team: @match.team2

/ 对赛往绩
= render "match_history",title: "对赛往绩",matches: @match.matches_history,team: nil

/ 近期战绩-主队
= render "match_history",title: "近期往绩",matches: @match.matches_recent_home,team: @match.team1

/ 近期战绩-客队
= render "match_history",matches: @match.matches_recent_guest,team: @match.team2,title: nil

