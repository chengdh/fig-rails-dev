%table.table.table-striped.table-condensed.table-hover.table-bordered
  %thead{:style => "text-align : center;" }
    %tr{:style => "text-align : center;" }
      %th
      %th
      %th{:style => "text-align : center;" } 球队
      %th{:style => "text-align : center;" }  亚赔
      %th{:style => "text-align : center;" }  大小
      %th{:style => "text-align : center;" }  欧赔
  %tbody{:style => "text-align : center;" }
    - @matches.each do |m|
      %tr
        %td{:style => "text-align : center;" }= m.league.cn_name
        %td{:style => "text-align : center;" }= m.try(:current_match).try(:home_score)
        %td{:style => "text-align : center;" }= m.team1.cn_name
        %td{:style => "text-align : center;" }= m.odds_asians.try(:first).try(:home)
        %td= m.odds_balls.try(:first).try(:over)
        %td= m.odds_europes.try(:first).try(:hw)
      %tr
        %td= m.match_time.strftime("%H:%M")
        %td= m.status
        %td
        %td= m.odds_asians.try(:first).try(:goal)
        %td= m.odds_balls.try(:first).try(:goal)
        %td= m.odds_europes.try(:first).try(:st)
      %tr
        %td
        %td= m.try(:current_match).try(:guest_score)
        %td= m.team2.cn_name
        %td= m.odds_asians.try(:first).try(:away)
        %td= m.odds_balls.try(:first).try(:under)
        %td= m.odds_europes.try(:first).try(:aw)
